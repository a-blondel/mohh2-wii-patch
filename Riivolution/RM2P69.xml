<wiidisc version="1">
    <id game="RM2" developer="69">
        <region type="P" />
    </id>

    <options>
        <section name="Private Server">
            <option name="WFC replacement" default="1">
                <choice name="Wiimmfi">
                    <patch id="wiimmfi" />
                </choice>
            </option>
            
            <option name="Bypass pw encoding" default="1">
                <choice name="Enabled">
                    <patch id="bypass-pw-encoding" />
                </choice>
            </option>
        </section>
    </options>

    <!-- Use Wiimmfi -->
    <patch id="wiimmfi">
        <file disc="/game.dol" external="mohh2/common/http-scheme1.bin" resize="false" offset="0x60eb04" />
        <file disc="/game.dol" external="mohh2/common/http-scheme1.bin" resize="false" offset="0x65e2b0" />
        <file disc="/game.dol" external="mohh2/RM2P69/wiimmfi-nas.bin" resize="false" offset="0x0065eea0" />
        <file disc="/game.dol" external="mohh2/common/user-agent.bin" resize="false" offset="0x65f1ac" />
        <file disc="/game.dol" external="mohh2/common/http-scheme2.bin" resize="false" offset="0x6e4068" />
    </patch>
	
    <!-- Bypass pw encoding (until we implement server side decoding and encoding) -->
    <patch id="bypass-pw-encoding">
        <file disc="/game.dol" external="mohh2/generic/nop.bin" resize="false" offset="0x11118" />
    </patch>
</wiidisc>
